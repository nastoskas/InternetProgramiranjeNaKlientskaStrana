<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Title</title>
</head>
<body>
<script type="text/javascript">
    let x = prompt("Vnesete cel broj: ");
    let n1=0, n2=0, n3=0;
    x = parseInt(x);
    while(!isNaN(x))
    {
        if(x%3==0)
        {
            n1+=1;
        }
        else
            if(x%3==1)
            {
                n2+=1;
            }
            else
            {
                n3+=1;
            }
        x = prompt("Vnesete cel broj: ");
        x = parseInt(x);
    }
    document.write("Vnesovte <strong>"+n1+"</strong> koi imat ostatok 0 pri delenje so 3 <br>");
    document.write("Vnesovte <strong>"+n2+"</strong> koi imat ostatok 1 pri delenje so 3 <br>");
    document.write("Vnesovte <strong>"+n3+"</strong> koi imat ostatok 2 pri delenje so 3");

</script>
</body>
</html>
